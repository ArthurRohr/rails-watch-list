<h1 class="my-4 text-center title">My lists</h1>

<div class="grid-list-container">
  <% @lists.each do |list| %>
    <div class="card text-bg-dark rounded list-container d-flex justify-content-center align-items-center">
      <p><%= list.name %></p>
      <%= link_to "List details", list_path(list), class: "btn btn-light" %>
      <%= link_to "",
        list_path(list),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
        class: "fa-solid fa-trash-can delete"
      %>
    </div>
  <% end %>
</div>
