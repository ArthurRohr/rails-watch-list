<div class="d-flex align-items-center justify-content-between mb-3">
  <h2 class="title"><%= @list.name %></h2>

  <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-light mx-5" %>
</div>

<div class="grid-container">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card text-bg-dark rounded list-details-container d-flex">
      <%= image_tag bookmark.movie.poster_url, width: 400 %>
      <h5 class="p-2"><%= bookmark.movie.title %></h5>
      <p class="px-2"><strong>Comment:</strong> <%= bookmark.comment %></p>
      <%= link_to "Movie details", movie_path(bookmark.movie), class: "card-link btn btn-light m-2 mt-auto" %>
      <%= link_to "",
        bookmark_path(bookmark),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
        class: "fa-solid fa-trash-can delete"
      %>
    </div>
  <% end %>
</div>
