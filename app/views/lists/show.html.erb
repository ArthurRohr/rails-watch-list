<h2><%= @list.name %></h2>
<% @list.bookmarks.each do |bookmark| %>
  <%= image_tag bookmark.movie.poster_url, width: 400 %>
  <p><%= bookmark.movie.title %></p>
  <p><%= bookmark.movie.overview %></p>
  <p><%= bookmark.movie.rating %></p>
  <p><%= bookmark.movie.title %></p>
  <p><%= bookmark.comment %></p>
  <p><%= link_to "Delete",
    bookmark_path(bookmark),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %></p>
<% end %>

<%= link_to "Add a movie", new_list_bookmark_path(@list) %>
<%= link_to "My lists", lists_path %>
<%= link_to "Create a list", new_list_path %>
